{
	"layer": "top",
	"height": 28,
	"modules-left": ["custom/launcher","battery","clock#date","clock#time","custom/updates", "custom/email", "custom/meetings"],
	"modules-center": ["hyprland/workspaces"],
	"modules-right": ["custom/disk","cpu","memory","temperature","network","hyprland/language","pulseaudio","custom/power"], 
	
	"pulseaudio": {
		"tooltip": false,
		"scroll-step": 5,
		"format": "{icon}",
		"format-muted": "{icon}",
		"on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"format-icons": {
			"default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
		}
	},

    "hyprland/workspaces": {
		"format": "{name}",
		"persistent-workspaces": {
			"*": 6
		}
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon}  {capacity}%",
        "format-charging": "Ôá¶  {capacity}%",
        "format-plugged": "Ôá¶  {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },
	"tray":{
		"icon-size":18,
		"spacing": 10
	},
    "clock#time": {
    	"format": "ÔÄó   {:%H:%M}",
        "tooltip": false
    },
    "clock#date": {
    	"format": "Ôóµ  {0:%d/%m/%Y}  ({0:%V})",
        "tooltip": false
    },
    "cpu": {
    	"interval": 5,
	"format": "Ôãõ  {usage:>2}%"
    },
    "memory": {
        "interval": 15,
        "format": "ÓøÖ   {used:0.1f}G/{total:.0f}G",
        "max-length": 15
    },
    "custom/launcher":{
        "format": "ÔåÉ ",
        "on-click": "wofi --show drun --term=ghostty --width=40% --columns 2 -I -s ~/.config/wofi/style.css",
        "on-click-right": "killall wofi"
    },
    "custom/power": {
    	"tooltip": false,
    	"on-click": "sh -c '(sleep 0.5s; hyprlock)' & disown",
    	"format": "ÔÄ£ "
    },
    "custom/updates": {
         "format": "ÔÄô  {}",
         "exec": "checkupdates-with-aur | wc -l",
         "interval": 60,
         "on-click": "ghostty -e paru -Syu && notify-send 'The system has been updated' "
    },
    "custom/disk": {
        "format": "Ôüâ {}",
        "exec": "df -B GiB / | tail -1 | awk '{ sub(/GiB$/, \"\", $2); sub(/GiB$/, \"\", $3); print $3 \"G/\" $2 \"G\" }'",
        "interval": 30
    },
    "network": {
        "format-wifi": "{icon}",
        "format-ethernet": "Ôûñ  {ifname}: {ipaddr}/{cidr}",
        "format-linked": "Ôûñ  {ifname} (No IP)",
        "format-disconnected": "‚ö† Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr} | Up: {bandwidthUpBits} | Down: {bandwidthDownBits}",
        "on-click-right": "nm-applet",
        "interval": 30,
        "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"]
    },
    "temperature": {
        "thermal-zone": 9,
        "interval": 5,
        "format": "Ôãâ {temperatureC}¬∞C",
        "format-critical": "Ôãâ {temperatureC}¬∞C üî•",
        "critical-threshold": 80,
        "tooltip-format": "CPU Temperature: {temperatureC}¬∞C"
    },
    "hyprland/language": {
        "format": "{short}",
        "tooltip-format": "{long}",
        "on-click": "hyprctl switchxkblayout next"
    },
    "custom/email": {
        "format": "Ôó¥  ÔÉ†  {}",
        "exec": "~/.config/waybar/email_unread.sh",
        "interval": 60,
        "tooltip": false
    },
    "custom/meetings": {
        "format": "ÔÅ≥ {}",
        "exec": "python ~/.config/waybar/scripts/thunderbird_meetings.py",
        "return-type": "json",
        "interval": 60,
        "tooltip": true
     }
}
