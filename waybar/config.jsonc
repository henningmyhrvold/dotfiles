{
	"layer": "top",
	"height": 28,
	"modules-left": ["custom/launcher","battery","clock#date","clock#time","custom/updates", "custom/email"],
	"modules-center": ["hyprland/workspaces"],
	"modules-right": ["custom/disk","cpu","memory","temperature","network","hyprland/language","pulseaudio","custom/power"], 
	
	"pulseaudio": {
		"tooltip": false,
		"scroll-step": 5,
		"format": "{icon}",
		"format-muted": "{icon}",
		"on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"format-icons": {
			"default": ["ï€¦ ", "ï€§ ", "ï€¨ "]
		}
	},

    "hyprland/workspaces": {
		"format": "{name}",
		"persistent-workspaces": {
			"*": 6
		}
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon}  {capacity}%",
        "format-charging": "ï‡¦  {capacity}%",
        "format-plugged": "ï‡¦  {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï‰„ ", "ï‰ƒ ", "ï‰‚ ", "ï‰ ", "ï‰€ "]
    },
	"tray":{
		"icon-size":18,
		"spacing": 10
	},
    "clock#time": {
    	"format": "ï€—   {:%H:%M}",
        "tooltip": false
    },
    "clock#date": {
    	"format": "ï—µ  {0:%d/%m/%Y}  ({0:%V})",
        "tooltip": false
    },
    "cpu": {
    	"interval": 5,
	"format": "ï‹›  {usage:>2}%"
    },
    "memory": {
        "interval": 15,
        "format": "î¿…   {used:0.1f}G/{total:.0f}G",
        "max-length": 15
    },
    "custom/launcher":{
        "format": "ïŒƒ ",
        "on-click": "wofi --show drun --term=ghostty --width=40% --columns 2 -I -s ~/.config/wofi/style.css",
        "on-click-right": "killall wofi"
    },
    "custom/power": {
    	"tooltip": false,
    	"on-click": "sh -c '(sleep 0.5s; hyprlock)' & disown",
    	"format": "ï€£ "
    },
    "custom/updates": {
         "format": "ï€™  {}",
         "exec": "checkupdates-with-aur | wc -l",
         "interval": 60,
         "on-click": "ghostty -e paru -Syu && notify-send 'The system has been updated' "
    },
    "custom/disk": {
        "format": "ïŸ‰ {}",
        "exec": "df -B GiB / | tail -1 | awk '{ sub(/GiB$/, \"\", $2); sub(/GiB$/, \"\", $3); print $3 \"G/\" $2 \"G\" }'",
        "interval": 30
    },
    "network": {
        "format-wifi": "{icon}",
        "format-ethernet": "ïž–  {ifname}: {ipaddr}/{cidr}",
        "format-linked": "ïž–  {ifname} (No IP)",
        "format-disconnected": "âš  Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr} | Up: {bandwidthUpBits} | Down: {bandwidthDownBits}",
        "on-click-right": "nm-applet",
        "interval": 30,
        "format-icons": ["ó°¤¯", "ó°¤Ÿ", "ó°¤¢", "ó°¤¥", "ó°¤¨"]
    },
    "temperature": {
        "thermal-zone": 9,
        "interval": 5,
        "format": "ï‹‰ {temperatureC}Â°C",
        "format-critical": "ï‹‰ {temperatureC}Â°C ðŸ”¥",
        "critical-threshold": 80,
        "tooltip-format": "CPU Temperature: {temperatureC}Â°C"
    },
    "hyprland/language": {
        "format": "{short}",
        "tooltip-format": "{long}",
        "on-click": "hyprctl switchxkblayout next"
    },
    "custom/email": {
        "format": "ïƒ  {}",
        "exec": "~/.config/waybar/email_unread.sh",
